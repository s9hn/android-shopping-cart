<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.shoppingCart.ShoppingCartActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_dealer_blue_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_shoppingCart_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_back" />

            <TextView
                android:id="@+id/tv_shoppingCart_title"
                style="@style/Woowa_pro_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/shoppingCart_title"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_shoppingCart_back_button"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_shoppingCart_page_number"
            style="@style/Woowa_air_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:textColor="@color/woowa_dealer_gray_700"
            app:layout_constraintBottom_toTopOf="@+id/cl_shoppingCart_bottom"
            app:layout_constraintEnd_toStartOf="@+id/iv_shopping_cart_next_page"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_shopping_cart_previous_button"
            tools:text="1" />

        <ImageView
            android:id="@+id/iv_shopping_cart_previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_shoppingCart_page_number"
            app:layout_constraintEnd_toStartOf="@+id/tv_shoppingCart_page_number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_shoppingCart_page_number"
            app:srcCompat="@drawable/icon_left_page_selector" />

        <ImageView
            android:id="@+id/iv_shopping_cart_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_shoppingCart_page_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_shoppingCart_page_number"
            app:layout_constraintTop_toTopOf="@+id/tv_shoppingCart_page_number"
            app:srcCompat="@drawable/icon_right_page_selector" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shoppingCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="36dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/tv_shoppingCart_page_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_detail_toolbar"
            tools:itemCount="3"
            tools:listitem="@layout/item_shopping_cart_product" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shoppingCart_bottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/woowa_dealer_gray_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_shoppingCart_all_sellect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:text="@string/tv_shoppingCart_all_sellect"
                android:textAppearance="@style/Woowa_air_16"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBox"
                app:layout_constraintStart_toStartOf="@+id/checkBox"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />

            <TextView
                android:id="@+id/tv_shoppingCart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="28dp"
                android:textAppearance="@style/Woowa_pro_20"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="154,222원" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_shoppingCart_order_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/woowa_dealer_mint_400"
            android:gravity="center"
            android:textAppearance="@style/Woowa_pro_20"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cl_shoppingCart_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cl_shoppingCart_bottom"
            app:layout_constraintTop_toTopOf="@+id/cl_shoppingCart_bottom"
            tools:text="주문하기(0)" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>