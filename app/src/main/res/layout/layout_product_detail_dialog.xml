<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productCount"
            type="woowacourse.shopping.presentation.ui.shoppingCart.uiModel.ProductInCartUiState" />

        <variable
            name="setClickListener"
            type="woowacourse.shopping.presentation.ui.productDetail.dialog.ProductDetailDialogClickListener" />


        <variable
            name="product"
            type="woowacourse.shopping.presentation.ui.shoppingCart.uiModel.ProductInCartUiState" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_radius_4dp"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/tv_detail_dialog_title"
            style="@style/Woowa_pro_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@{product.product.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="제네시스" />

        <TextView
            android:id="@+id/tv_detail_dialog_price"
            style="@style/Woowa_pro_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{String.format(@string/price_format, product.product.price)}"
            app:layout_constraintStart_toStartOf="@+id/tv_detail_dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_dialog_title"
            tools:text="20000원" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_detail_dialog_select"
            style="@style/Woowa_pro_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_radius_4dp_mint"
            android:onClick="@{() -> setClickListener.setClickEventOnToShoppingCart(product)}"
            android:text="@string/btn_detail_dialog_select"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/layout_control_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_detail_dialog_select"
            app:layout_constraintEnd_toEndOf="@+id/btn_detail_dialog_select"
            app:layout_constraintStart_toStartOf="parent"
            app:productInCart="@{product}"
            app:setQuantityClickListener="@{setClickListener}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>